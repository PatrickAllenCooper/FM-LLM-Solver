FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    postgresql-client \
    redis-tools \
    && rm -rf /var/lib/apt/lists/*

# Create app user
RUN groupadd -r fmllm && useradd -r -g fmllm fmllm

# Set working directory
WORKDIR /app

# Copy and install core requirements first
COPY web_requirements.txt ./
RUN pip3 install --no-cache-dir -r web_requirements.txt

# Install additional dependencies needed by the app
RUN pip3 install --no-cache-dir omegaconf pydantic-settings python-dotenv PyYAML

# Copy application code
COPY fm_llm_solver/ ./fm_llm_solver/
COPY web_interface/ ./web_interface/
COPY utils/ ./utils/
COPY config/ ./config/
COPY run_web_interface.py ./
COPY config.yaml ./

# Create necessary directories
RUN mkdir -p /app/logs /app/cache && \
    chown -R fmllm:fmllm /app

# Switch to non-root user
USER fmllm

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Expose port
EXPOSE 5000

# Environment variables
ENV DEPLOYMENT_MODE=gcp-production
ENV PYTHONPATH=/app

# Run the web application
CMD ["python3", "run_web_interface.py"]
